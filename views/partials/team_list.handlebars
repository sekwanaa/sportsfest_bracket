<div class="teamList">
    <h1>Current registered teams</h1>
    <div>
    <p id="totalUsers" value="{{allTeams.length}}">Total Teams: {{allTeams.length}}</p>
    <br>
    <div class="grid-column">
        <div class="header" class="grid-row-name"><p>Team Name</p></div> 
        <div class="header" class="grid-row-district"><p>District</p></div>
        {{#each allTeams}}
            <div class="grid-row-name" id="email{{@index}}">{{this.name}}</div> 
            <div class="grid-row-district" id="currentRole{{@index}}">{{this.district}}</div>
        {{/each}}
    </div> 
</div>
</div>