<div class="teamList">
    <h1>Round Robin Games List</h1>
    <br>
    {{#unless isRounds}}
        <button id="rrGenerateRoundRobin">Create Schedule</button>
    {{/unless}}
    <button id="downloadCSVBtn">Download CSV</button>
    <br>
    <div>
        <label for="totalGames">Total Games:</label>
        {{#unless isRounds}}
            <p id="totalGames" value="0">0</p>
        {{/unless}}
        {{#if isRounds}}
        <section id="completeBtnRow">
            <p id="totalGames" value="{{rounds.length}}">{{rounds.length}}</p>
            {{#if isStage1}}
                <button id="completeRoundRobinButton" type="submit">Complete Round Robin</button>
            {{/if}}
        </section>  
        {{/if}}
        <br>
            <div id="roundRobinGrid" class="grid-column">
                <div class="header grid-row-name"><b>Game</b></div> 
                <div class="header grid-row-name"><b>Team 1</b></div> 
                <div class="header grid-row-name"><b>Team 2</b></div>
                <div class="header grid-row-name"><b>Field</b></div>
            </div>
            <div id="roundRobinGridInfo" class="grid-column">
                {{#if isRounds}}
                    {{#each rounds}}
                        <div class="grid-row-name" id="gameNum{{@index}}">{{this.gameNum}}</div>
                        <div class="grid-row-name" id="team1Name{{@index}}">{{this.team1}}</div>
                        <div class="grid-row-name" id="team2Name{{@index}}">{{this.team2}}</div>
                        <div class="grid-row-name" id="field{{@index}}">{{this.field}}</div>
                    {{/each}}
                {{/if}}
            </div> 
            <br>
            {{#unless isRounds}}
            <button id="rrSubmit" type="submit">Submit Round Robin</button>
            {{/unless}}
    </div>
</div>

<script src="/public/js/round_robin.js"></script>