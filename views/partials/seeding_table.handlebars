<div class="teamList">
    {{!-- <h1>Current Seeds</h1> --}}
    <button id="refresh_seed_table_button">Refresh Table</button>
    <br>
    <div class="header_bar">
        <h2>Seed #</h2>
        <h2>Team Name</h2>
        <h2>Wins</h2>
        <h2>Losses</h2>
        <h2>Point Differential</h2>
    </div>
    <div class="seed_information">
    {{#each matches}}
        <div id="seed_info_div" class="seed_info">
            <p id="seed{{#incrementIndex @index}}{{/incrementIndex}}">{{#incrementIndex @index}}{{/incrementIndex}}</p>
            <p id="teamName{{#incrementIndex @index}}{{/incrementIndex}}">{{this.name}}</p>
            <p id="wins{{#incrementIndex @index}}{{/incrementIndex}}">{{this.winnerCount}}</p>
            <p id="losses{{#incrementIndex @index}}{{/incrementIndex}}">{{this.loserCount}}</p>
            <p id="pointDiff{{#incrementIndex @index}}{{/incrementIndex}}">{{this.pointDifferential}}</p>
        </div>
    {{/each}}
    </div>
    {{#if stage1}}
        <button id="seed_submit_button" type="submit">Submit Seeds</button>
    {{/if}}
</div>

<script src="/public/js/seed_table.js"></script>